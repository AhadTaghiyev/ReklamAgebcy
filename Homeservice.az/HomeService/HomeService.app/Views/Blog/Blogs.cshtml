@model HomeVM
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> localizaer
@{
    ViewData["Title"] = "Blogs";
}

<section id="blog" class="blog">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="section-title">
                    <h2>@localizaer["Blog"]</h2>
                </div>
            </div>
        
        </div>
        <div class="row">
            @foreach (var item in Model.Blogs.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="blog-image">
                            <a href="javascript:void(0)">
                                <img src="~/assets/images/blog/@item.ImageFile" alt="blog" />
                            </a>
                            <span class="blog-tag">

                                @if ((localizaer["Language"] == "Az"))
                                {

                                    @Model.Positions.Items.FirstOrDefault(x => x.Id == item.PositionId).PositionAz
                                }
                                else if ((localizaer["Language"] == "En"))
                                {

                                    @Model.Positions.Items.FirstOrDefault(x => x.Id == item.PositionId).PositionEn
                                }
                                else
                                {

                                    @Model.Positions.Items.FirstOrDefault(x => x.Id == item.PositionId).PositionRu
                                }
                            </span>
                        </div>
                        <div class="blog-content">
                            <h3>
                                <a href="javascript:void(0)">
                                    @if ((localizaer["Language"] == "Az"))
                                    {

                                        @Html.Raw(item.TitleAz)
                                    }
                                    else if ((localizaer["Language"] == "En"))
                                    {

                                        @Html.Raw(item.TitleEn)
                                    }
                                    else
                                    {

                                        @Html.Raw(item.TitleRu)
                                    }
                                </a>
                            </h3>
                            <p>
                                @if ((localizaer["Language"] == "Az"))
                                {

                                    @Html.Raw(item.DescriptionAz)
                                }
                                else if ((localizaer["Language"] == "En"))
                                {

                                    @Html.Raw(item.DescriptionEn)

                                }
                                else
                                {

                                    @Html.Raw(item.DescriptionRu)

                                }
                            </p>
                            <a asp-controller="blog" asp-action="details" asp-route-id="@item.Id" class="main-btn">@localizaer["Read More"]</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

