<section id="contact" class="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>
                        @localizaer["Contact Us"]
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-7">
                <div class="row">
                    <div class="col-md-6 col-lg-12">
                        <div class="single-contact-info">
                            <div class="contact-icon">
                                <i class="lni lni-phone"></i>
                            </div>
                            <div class="contact-meta">
                                <h5>Telefon</h5>
                                <p>@Model.settingGet.HomePhone</p>
                                <p>@Model.settingGet.CellPhone</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-12">
                        <div class="single-contact-info">
                            <div class="contact-icon">
                                <i class="lni lni-phone"></i>
                            </div>
                            <div class="contact-meta">
                                <h5>Adres</h5>
                                <p>@Model.settingGet.Adress</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-5">
                <div class="contact-form-wrapper wow fadeInUp" data-wow-delay=".2s">
                    <h3 class="contact-form-title">Bizə Yazın</h3>
                    <form class="contact-form">
                        <div class="form-group">
                            <label for="fullName">Ad Soyad</label>
                            <input id="MessagePostDto_FullName" type="text" name="fullName" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input id="MessagePostDto_Email" type="email" name="email" />
                        </div>
                        <div class="form-group">
                            <label for="subject">Mövzu</label>
                            <input id="MessagePostDto_Subject" type="text" name="subject" />
                        </div>
                        <div class="form-group">
                            <label for="message">Mesaj</label>
                            <textarea id="MessagePostDto_Content" name="message" rows="1"></textarea>
                        </div>
                        <div class="form-group mb-0">
                            <button id="btn" type="submit" class="main-btn">Göndər</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="map-container">

        <object style="border: 0; height: 450px; width: 100%"
                data="https://www.google.com/maps/d/embed?mid=1maUONREIHgvJPBZ5danb5Ru8eIK-m3s&ehbc=2E312F"></object>

    </div>

</section>
@section Script{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        var send_btn = document.querySelector("#btn")
        send_btn.addEventListener("click", function (e) {
            e.preventDefault()
            var fullname = document.getElementById("MessagePostDto_FullName")
            var email = document.getElementById("MessagePostDto_Email")
            var subject = document.getElementById("MessagePostDto_Subject")
            var text = document.getElementById("MessagePostDto_Content")
            $.ajax({
                url: "/home/sendmessage",
                data: {
                    fullName: fullname.value,
                    email: email.value,
                    subject: subject.value,
                    content: text.value,
                },
                dataType: 'json',
                type: "post",
                success: function (data) {
                    if (data.status == 200) {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Uğurla göndərildi',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        fullname.value = ""
                        subject.value = ""
                        email.value = ""
                        text.value = ""
                    } else {
                        Swal.fire({
                            title: data,
                            showClass: {
                                popup: 'animate__animated animate__fadeInDown'
                            },
                            hideClass: {
                                popup: 'animate__animated animate__fadeOutUp'
                            }
                        })
                    }
                }
            })
        })
    </script>
}

