        <div class="row align-items-center">
            <div class="col-md-10 col-lg-6 col-xl-6 ">
                <div class="hero-content wow fadeInUp d-flex align-items-center" data-wow-delay=".2s">
                    <div class=" w-100">

                        <h1 class="hero-title">
                            @if ((localizaer["Language"] == "Az"))
                            {
                                @Model.settingGet.IntroTitleAz.Replace("<p>", string.Empty)
                            }
                            else if ((localizaer["Language"] == "En"))
                            {
                                @Model.settingGet.IntroTitleEn.Replace("<p>", string.Empty)
                            }
                            else
                            {
                                @Model.settingGet.IntroTitleRu.Replace("<p>", string.Empty)
                            }
                        </h1>
                        <p class="hero-desc">
                            @if ((localizaer["Language"] == "Az"))
                            {
                                @Html.Raw(Model.settingGet.IntroTextAz.Replace("<p>", string.Empty))
                            }
                            else if ((localizaer["Language"] == "En"))
                            {
                                @Html.Raw(Model.settingGet.IntroTextEn.Replace("<p>", string.Empty))
                            }
                            else
                            {
                                @Html.Raw(Model.settingGet.IntroTextRU.Replace("<p>", string.Empty))
                            }

                        </p>
                        <a href="#pricing" class="main-btn">@localizaer["Price"]</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-xl-6 d-none d-lg-block">
