@model SeoTagVM
@{
    ViewData["Title"] = "Update";
}

<div style="background-color:gainsboro" class="container">
    <div class="card-body row">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <h1 class="mb-5">SeoTags Bolmesi</h1>


            <div class="row">

                <div class="col-md-4 mb-2 ">
                    <label>SeoTag</label>
                    <input asp-for="@Model.SeoTagPostDto.Tag" value="@Model.SeoTagGetDto.Tag" type="text" class=" form-control " />
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.SeoTagPostDto.Tag"></span>
                </div>

                <div class="col-md-12 mt-3">
                    <a class="btn btn-dark" asp-controller="SeoTag" asp-action="index"><i class="fas fa-undo"></i> Geriyə</a>
                    <button type="submit" class="btn btn-primary">Düzəliş Et</button>
                </div>
            </div>

        </form>
    </div>
</div>
