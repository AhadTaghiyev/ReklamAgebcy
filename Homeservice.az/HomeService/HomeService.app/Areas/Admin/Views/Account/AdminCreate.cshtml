@model LoginVM

@{
    ViewData["Title"] = "AdminCreate";
}


<div class="container">
    <div class="login-form d-flex justify-content-center">

        <form style="width:50%;" method="post">
            <div class="alert alert-danger " asp-validation-summary="ModelOnly"></div>
            <div class="form-group">

                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" placeholder="UserName">
                <div> <span class="text text-danger" asp-validation-for="UserName"></span></div>

                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" placeholder="Password">
                <div> <span class="text text-danger" asp-validation-for="Password"></span></div>

                <div class="button-box">
                    <button type="submit" class="btn btn-outline-secondary">Yarat</button>
                </div>
            </div>
        </form>
    </div>
</div>

